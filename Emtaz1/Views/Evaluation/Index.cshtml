            <td><input asp-for="socialv" type="radio"  value="1" /></td>
            <td><input asp-for="socialv" type="radio"  value="2" /></td>
        </tr>
        <tr>
            <th>2</th>
            <th>collaboration</th>
            <td><input asp-for="collaboration" type="radio"  value="0" /></td>
            <td><input asp-for="collaboration" type="radio"  value="1" /></td>
            <td><input asp-for="collaboration" type="radio"  value="2" /></td>
        </tr>
          <tr>
            <th>3</th>
            <th>LeaderShip</th>
            <td><input asp-for="LeaderShip" type="radio"  value="0" /></td>
            <td><input asp-for="LeaderShip" type="radio"  value="1" /></td>
